                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual machine size",
                        "toolTip": "The size of virtual machine to provision.",
                        "recommendedSizes": [
                            "Standard_D2_v2"
                        ],
                        "osPlatform": "Windows",
                        "count": "1"
                    },
                    {
                        "name": "OSdisktype",
                        "type": "Microsoft.Common.DropDown",
                        "label": "OS Disk Type",
                        "placeholder": "",
                        "defaultValue": "StandardSSD_LRS",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Standard HDD",
                                    "value": "Standard_LRS"
                                },
                                {
                                    "label": "Standard SDD",
                                    "value": "StandardSSD_LRS"
                                },
                                {
                                    "label": "Premium SSD (only for supported VM sizes)",
                                    "value": "Premium_LRS"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "vnet",
                        "type": "Microsoft.Network.VirtualNetworkCombo",
                        "label": {
                            "virtualNetwork": "Virtual network",
                            "subnets": "Subnets"
                        },
                        "toolTip": {
                            "virtualNetwork": "",
                            "subnets": ""
                        },
                        "defaultValue": {
                            "name": "NewVnet",
                            "addressPrefixSize": "/16"
                        },
                        "constraints": {
                            "minAddressPrefixSize": "/24"
                        },
                        "options": {
                            "hideExisting": false
                        },
                        "subnets": {
                            "subnet": {
                                "label": "Subnet",
                                "defaultValue": {
                                    "name": "subnet-1",
                                    "addressPrefixSize": "/24"
                                },
                                "constraints": {
                                    "minAddressPrefixSize": "/26",
                                    "minAddressCount": 12,
                                    "requireContiguousAddresses": true
                                }
                            }
                        },
                        "visible": true
                    }
                ]
            },
            {
                "name": "vmManagement",
                "label": "Virtual Machine Management",
                "bladeTitle": "Virtual Machine Settings",
                "elements": [
                    {
                        "name": "EvidenManageOptionsGroup",
                        "type": "Microsoft.Common.OptionsGroup",
                        "label": "Eviden Managed",
                        "defaultValue": "Yes",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Yes",
                                    "value": "True"
                                },
                                {
                                    "label": "No",
                                    "value": "False"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "EvidenAntimalwareOptionsGroup",
                        "type": "Microsoft.Common.OptionsGroup",
                        "label": "Eviden Antimalware",
                        "defaultValue": "Yes",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Yes",
                                    "value": "True"
                                },
                                {
                                    "label": "No",
                                    "value": "False"
                                }
                            ],
                            "required": false
                        },
                        "visible": "[equals(steps('vmManagement').EvidenManageOptionsGroup, 'True')]"
                    },
                    {
                        "name": "EvidenComplianceOptionsGroup",
                        "type": "Microsoft.Common.OptionsGroup",
                        "label": "Eviden Compliance",
                        "defaultValue": "Yes",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Yes",
                                    "value": "True"
                                },
                                {
                                    "label": "No",
                                    "value": "False"
                                }
                            ],
                            "required": false
                        },
                        "visible": "[equals(steps('vmManagement').EvidenManageOptionsGroup, 'True')]"
                    },
                    {
                        "name": "EvidenBackupBox",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Backup policy schedule",
                        "toolTip": "The name of backup schedule policy for Virtual Machine",
                        "defaultValue": "no-backup",
                        "constraints": {
                            "required": false
                        },
                        "visible": "[equals(steps('vmManagement').EvidenManageOptionsGroup, 'True')]"
                    },
                    {
                        "name": "EvidenPatchingBox",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Patching schedule",
                        "toolTip": "The name of patching schedule for Virtual Machine",
                        "defaultValue": "no-patching",
                        "constraints": {
                            "required": false
                        },
                        "visible": "[equals(steps('vmManagement').EvidenManageOptionsGroup, 'True')]"
                    }
                ]
            }
